<script id="script-script.js">/* script.js */
document.addEventListener('DOMContentLoaded', () => {
    
    // 1. ANIMACIONES AL HACER SCROLL (Intersection Observer)
    // Esto hace que las secciones aparezcan suavemente cuando bajas
    const observerOptions = {
        threshold: 0.1 // Se activa cuando el 10% del elemento es visible
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('visible');
                observer.unobserve(entry.target); // Dejar de observar una vez animado
            }
        });
    }, observerOptions);

    // Seleccionamos todos los elementos con la clase .slide-up
    const elementsToAnimate = document.querySelectorAll('.slide-up');
    elementsToAnimate.forEach(el => observer.observe(el));


    // 2. ARREGLO DE IMAGEN DE DRIVE
    // Si la imagen de Drive falla (error 403/404), ponemos un avatar por defecto
    const profilePic = document.getElementById('profile-pic');
    
    profilePic.onerror = function() {
        console.log("La imagen de Drive fall贸 al cargar. Usando imagen de respaldo.");
        // Usamos una imagen gen茅rica profesional si la tuya falla
        this.src = 'https://cdn-icons-png.flaticon.com/512/3135/3135715.png';
        this.style.border = '4px solid #ff4444'; // Borde rojo para avisarte que es el respaldo
    };
    
    // 3. EFECTO GENIAL: TTULO DINMICO
    // Cambia el t铆tulo de la pesta帽a si el usuario sale de la p谩gina
    let docTitle = document.title;
    window.addEventListener("blur", () => {
        document.title = "隆Vuelve aqu铆! ";
    });
    window.addEventListener("focus", () => {
        document.title = docTitle;
    });

});</script>
